{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "web-app",
      "host": {
        "sourcePath": "/code"
      }
    },
    {
      "name": "db-data",
      "host": {
        "sourcePath": "postgres_data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "web-app",
      "image": "512298914400.dkr.ecr.us-west-1.amazonaws.com/credsite/testdjangoproject",
      "essential": true,
      "memory": 128,
      "command": [
        "/bin/bash",
        "/code/run-prod.sh"
      ],
      "environment": [
        {
          "name": "SECRET_KEY",
          "value": "changemeinprod"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "web-app",
          "containerPath": "/code",
          "readOnly": true
        }
      ]
    },
    {
      "name": "db",
      "image": "postgres:11-alpine",
      "essential": true,
      "memory": 128,
      "links": [
        "web-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "db-data",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": true
        }
      ]
    }
  ]
}
